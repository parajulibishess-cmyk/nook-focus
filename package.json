{
  "name": "nook-focus",
  "version": "2.1.0",
  "main": "electron/main.js",
  "description": "A focus timer for desktop",
  "author": "Owner",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "start": "electron .",
    "dist": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.nookfocus.app",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^4.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  }
}